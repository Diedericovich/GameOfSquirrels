<Window x:Class="_GameOfSquirrels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:_GameOfSquirrels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1200"
        Height="600"
        mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/6906qzxo55711.png"
                    Stretch="UniformToFill" />
    </Window.Background>
    <Grid x:Name="GridOuter">
        <!--#region Grid Columns & Rows-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="15*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <!--#endregion-->
        <ScrollViewer Grid.Row="1"
                      Grid.RowSpan="3"
                      Grid.Column="1"
                      HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="GridGame"
                  Grid.Row="1"
                  Grid.RowSpan="3"
                  Grid.Column="1"
                  Background="#A5000000" />
        </ScrollViewer>
        <Button Grid.Row="3"
                Grid.Column="3"
                Click="TestButtonClick">
            <Button.Background>
                <ImageBrush ImageSource="/btnRoll.png"
                            Stretch="Uniform" />
            </Button.Background>
        </Button>
        <Label x:Name="lblDiceResult"
               Grid.Row="2"
               Grid.Column="3"
               HorizontalAlignment="Left" />
        <Label x:Name="lblCurrentRound"
               Grid.Column="1"
               HorizontalAlignment="Center" />
        <Label x:Name="lblCurrentPlayer"
               Grid.Row="2"
               Grid.Column="3"
               HorizontalAlignment="Right" />
    </Grid>
</Window>